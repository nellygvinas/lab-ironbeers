<div class="random-beer-container">
{{#each beer}}
  <div class="random-beer-img">
    <img src="{{this.image_url}}" alt="beer image">
  </div>
<div class="random-beer-txt">
  <h2>{{this.name}}</h2>
  <h3>{{this.tagline}}</h3>
  <p>{{this.description}}</p>
  <h3> Food Pairing </h3>
    <ul>
      <li>{{this.food_pairing.[0]}}</li>
      <li>{{this.food_pairing.[1]}}</li>
      <li>{{this.food_pairing.[2]}}</li>
    </ul>
  <p><b>Brewer's Tips: </b>{{ this.brewers_tips}}</p>
</div>


{{/each}}
</div>